# Database
POSTGRES_USER=mnemosyne
POSTGRES_PASSWORD=mnemosyne_dev
POSTGRES_DB=mnemosyne
DATABASE_URL=postgresql://mnemosyne:mnemosyne_dev@localhost:5432/mnemosyne

# API
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
DEBUG=true

# Security
SECRET_KEY=your-secret-key-change-in-production
API_KEY_PREFIX=mn_test_

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Application
APP_NAME=Mnemosyne
APP_VERSION=0.1.0

# Redis & Celery
REDIS_URL=redis://localhost:6379/0

# Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=104857600

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSIONS=1536

# Processing
CHUNK_SIZE=512
CHUNK_OVERLAP=128

# Chat
CHAT_MODEL=gpt-4o-mini
CHAT_TEMPERATURE=0.7
CHAT_MAX_TOKENS=1000

# Reranking (Week 5)
RERANK_ENABLED=true
RERANK_MODEL=ms-marco-MultiBERT-L-12
RERANK_TOP_K=10

# Caching (Week 5)
CACHE_ENABLED=true
CACHE_EMBEDDING_TTL=86400
CACHE_SEARCH_TTL=3600

# Rate Limiting (Week 5)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_CHAT=10/minute
RATE_LIMIT_RETRIEVAL=100/minute
RATE_LIMIT_UPLOAD=20/hour

# Query Reformulation (Week 5)
QUERY_REFORMULATION_ENABLED=false
QUERY_REFORMULATION_MODE=expand

# Retry Logic (Week 5)
RETRY_ENABLED=true
RETRY_MAX_ATTEMPTS=3
RETRY_EXPONENTIAL_BASE=2
